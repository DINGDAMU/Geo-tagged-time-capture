<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Filter_Activity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GET"
        android:id="@+id/btn"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FILTER"
        android:id="@+id/button"
        android:onClick="filter"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn"

        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listImage"
        android:layout_below="@+id/button"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Index here"
        android:layout_centerHorizontal="true"
        android:id="@+id/index"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/listImage"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address here"
        android:layout_centerHorizontal="true"
        android:id="@+id/listAddress"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/index"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time here"
        android:layout_centerHorizontal="true"
        android:id="@+id/listTime"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/listAddress"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coordinates here"
        android:layout_centerHorizontal="true"
        android:id="@+id/listCoordinates"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/listTime"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uploaders here"
        android:layout_centerHorizontal="true"
        android:id="@+id/listUploader"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/listCoordinates"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/pre_pic"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next_pic"
        android:layout_alignTop="@+id/pre_pic"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
